<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="lblNoveRecenice" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Unesite jednu recenicu: " />
      <TextField fx:id="unosRecenice" promptText="Vasa recenica" GridPane.columnIndex="1" />
      <Label text="Prepravljena recenica je: " GridPane.rowIndex="1" />
      <Label fx:id="novaRecenica" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="btn" alignment="CENTER" mnemonicParsing="false" onAction="#prepraviRecenicu" text="Button" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
   </children>
</GridPane>
